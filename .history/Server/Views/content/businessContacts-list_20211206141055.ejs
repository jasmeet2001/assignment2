<div class ="offset-md-1 col-md-10"><h1><%= page %></h1>
<a href="/add" class="btn btn-primary" role="button">
    <i class="fas fa-plus-circle"></i> Add New Business Contact
</a>
<div class="row">
    <div class="col">

        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th class="text-center col-1">#</th>
                    <th class="text-center col-2">Contact Name</th>
                    <th class="text-center col-2">Contact Number</th>
                    <th class="text-center col-2">Email Address</th>
                    <th class="text-center col-1"></th>
                    <th class="text-center col-1"></th>
                </tr>
            </thead>
            <tbody>

                <% for(let count=0; count <businessContacts.length; count++) { %>
                    <!-- Repeatable Row Template-->
                    <tr>
                        <th scope="row"><%= count + 1 %></th>
                        <td class="text-center col-2"><%= businessContacts[count].contactName %> </td>
                        <td class="text-center col-2"><%= businessContacts[count].contactNumber %></td>
                        <td class="text-center col-2"><%= businessContacts[count].emailAddress %></td>
                        <td class="text-center col-1"><%= businessContacts[count]._id %>
                        <a href ="/edit" class="btn btn-primary">
                       <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td class="text-center col-1"><%= businessContacts[count]._id%>
                        <a href="/delete" class="btn btn-danger">
                        <i class = "fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                <% } %> 
            </tbody>
        </table>

    </div>
</div>
</div>